<configuration>
  <property>
    <name>hbase.rootdir</name>
    <value>hdfs://master.mondo.com:9000/hbase</value>
    <description>The directory shared by RegionServers.</description>
  </property>
  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value>
  </property>
  
  <property>
    <name>hbase.zookeeper.property.dataDir</name>
    <value>/usr/local/hbase/zookeeper</value>
  </property>

  <property>
    <name>hbase.zookeeper.property.clientPort</name>
    <value>2181</value>
  </property>

  <property>
   <name>hbase.coprocessor.user.region.classes</name>
   <value>org.apache.hadoop.hbase.coprocessor.AggregateImplementation</value>
  </property>

  <property>
   <name>hbase.rpc.timeout</name>
   <value>300000</value>
  </property>
  <property>
    <name>hbase.master.logcleaner.ttl</name>
    <value>60</value>
    <description>Maximum time a HLog can stay in the .oldlogdir directory,
    after which it will be cleaned by a Master thread.</description>
  </property>
  <property>
    <name>hbase.zookeeper.quorum</name>
<value>master.mondo.com,slave1.mondo.com,slave2.mondo.com</value>
	</property>
</configuration>
